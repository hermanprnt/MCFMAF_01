<form asp-action="CreateTR1" asp-controller="TRDB1" method="post">
    <div class="mb-3">
        <label class="form-label">Agreement Number</label>
        <input type="text" class="form-control" asp-for="AGREEMENT_NUMBER" placeholder="Input Agreement Number" />
        <span asp-validation-for="AGREEMENT_NUMBER" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">BRANCH ID</label>
        <input type="text" class="form-control" asp-for="BRANCH_ID" placeholder="Input Branch ID" />
        <span asp-validation-for="BRANCH_ID" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">No. BPKB</label>
        <input type="text" class="form-control" asp-for="BPKB_NO" placeholder="Input No.BPKB" />
        <span asp-validation-for="BPKB_NO" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Tanggal BPKB In</label>
        <input type="date" class="form-control" asp-for="BPKB_DATE_IN" />
        <span asp-validation-for="BPKB_DATE_IN" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Tanggal BPKB</label>
        <input type="date" class="form-control" asp-for="BPKB_DATE" />  
        <span asp-validation-for="BPKB_DATE" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">No Faktur</label>
        <input type="text" class="form-control" asp-for="FAKTUR_NO" placeholder="Input No. Faktur"/>
        <span asp-validation-for="FAKTUR_NO" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Tanggal Faktur</label>
        <input type="date" class="form-control" asp-for="FAKTUR_DATE" />
        <span asp-validation-for="FAKTUR_DATE" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Nomor Polisi</label>
        <input type="text" class="form-control" asp-for="POLICE_NO" placeholder="Input Nomor Polisi"/>
        <span asp-validation-for="POLICE_NO" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Lokasi Penyimpanan</label>
        <input type="text" class="form-control" asp-for="AGREEMENT_NUMBER" />
        <span asp-validation-for="AGREEMENT_NUMBER" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>

</form>





